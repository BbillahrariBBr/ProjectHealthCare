<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.bakibillah.projecthealthcare.PrimaryTreatment.PrimaryTreatmentActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="5dp">
        <ImageView
            android:id="@+id/imageViewS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher"/>

        <TextView
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Header"
            android:textSize="20dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textAlignment="center"
            android:textColor="#000000"
            android:background="#78909c"
            />

        <TextView
            android:id="@+id/defination"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Defination"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            />

        <TextView
            android:id="@+id/causes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Causes : "
            android:textSize="15dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textColor="#000000"
            android:background="#78909c"
            />

        <TextView
            android:id="@+id/causesDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Causes Details"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            />

        <TextView
            android:id="@+id/symptoms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Symptoms : "
            android:textColor="#000000"
            android:textSize="15dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:background="#78909c"
            />

        <TextView
            android:id="@+id/symptomsDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Symptioms Details"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            />

        <TextView
            android:id="@+id/toDo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="What to do : "
            android:textSize="15dp"
            android:textColor="#000000"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:background="#78909c"
            />

        <TextView
            android:id="@+id/toDoDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="To Do Details"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            />
    </LinearLayout>

</ScrollView>
